# Database Configuration
# Use secure passwords from GitHub Secrets or environment variables
MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
MYSQL_PASSWORD=${MYSQL_PASSWORD}
SQLALCHEMY_DATABASE_URL=mysql+pymysql://marzban:${MYSQL_PASSWORD}@mysql:3306/marzban

# Marzban Admin Configuration  
# Generate secure credentials and store in GitHub Secrets
SUDO_USERNAME=${SUDO_USERNAME}
SUDO_PASSWORD=${SUDO_PASSWORD}

# Domain and SSL Configuration
# Replace with your actual domain and server details
DOMAIN=your-domain.com
SSL_EMAIL=your-email@example.com
SERVER_IP=your.server.ip.address

# Marzban Panel Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000

# Database Optimization (for high load)
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=30

# Job Intervals (in seconds)
JOB_CORE_HEALTH_CHECK_INTERVAL=10
JOB_RECORD_NODE_USAGES_INTERVAL=30
JOB_RECORD_USER_USAGES_INTERVAL=10
JOB_REVIEW_USERS_INTERVAL=10
JOB_SEND_NOTIFICATIONS_INTERVAL=30

# Xray Configuration
XRAY_JSON=/usr/local/share/xray/xray_config.json
XRAY_EXECUTABLE_PATH=/usr/local/bin/xray
XRAY_ASSETS_PATH=/usr/local/share/xray

# Additional Security
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_ACCESS_TOKEN_SECRET=${JWT_ACCESS_TOKEN_SECRET}

# VLESS Reality Keys (Generate with: docker run --rm gozargah/marzban:latest xray x25519)
VLESS_PRIVATE_KEY=${VLESS_PRIVATE_KEY}
VLESS_PUBLIC_KEY=${VLESS_PUBLIC_KEY}
VLESS_SHORT_IDS=${VLESS_SHORT_IDS}

# SSL for Marzban (Internal HTTPS for Docker network)
UVICORN_SSL_CERTFILE=/etc/letsencrypt/live/${DOMAIN}/fullchain.pem
UVICORN_SSL_KEYFILE=/etc/letsencrypt/live/${DOMAIN}/privkey.pem